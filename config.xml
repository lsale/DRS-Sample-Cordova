<?xml version='1.0' encoding='utf-8'?>
<widget id="com.amazon.drs.drsteaserpage" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DRS Teaser Page for Apache Cordova</name>
    <description>
        A sample app to display the DRS functionality in Cordova
    </description>
    <author email="lucasale@amazon.com" href="http://developer.amazon.com">
        Luca Sale
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/splash/ios/Default@2x~universal~anyany.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-login-with-amazon-dash" spec="/Users/lucasale/Development/Github/cordova-plugin-login-with-amazon-dash">
        <variable name="IOS_API_KEY" value="eyJhbGciOiJSU0EtU0hBMjU2IiwidmVyIjoiMSJ9.." />
        <variable name="IOS_BUNDLE_NAME" value="com.amazon.drs.drsteaserpage" />
    </plugin>
    <engine name="android" spec="^7.1.4" />
</widget>
